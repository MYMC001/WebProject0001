@{

    Layout = "_Layout";
}

@model Travel

<body   class="bk">

<div class="containered   ">
    <div class="into-form">
        <form   asp-action="AddTravel">
            <div class="form-item">
                <span class="material-symbols-outlined">
                    flight_takeoff
                </span>
            </div>
            <div class="form-item">
                <input type="hidden" placeholder="Travel ID"   asp-for="TravelID">
            </div>
            <div class="form-item">
                <input placeholder="Location"  asp-for="Location">
            </div>
            <div class="form-item">
                <input  placeholder="Destination"  asp-for="Destination">
            </div>
            <div class="form-item">
                <input  placeholder="Duration"   asp-for="duration">
            </div>
            <div class="form-item">
                <input  placeholder="Start"   asp-for="Start">
            </div>
            <div class="form-item">
                <input  placeholder="End"   asp-for="End">
            </div>
            <div class="form-item">
                <input  placeholder="passengers"   asp-for="passengers">
            </div>
            <div class="form-item">
                <input  placeholder="Price"    asp-for="Price">
            </div>

            <div class="form-item">
                <input type="submit">
            </div>
        </form>
    </div>
</div>

</body>
